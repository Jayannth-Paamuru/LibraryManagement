
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>greatest</title>
</head>
<body>
    <div> 
        <form method="post">
            <input type="text" name="t1" />
            <input type="text" name="t2" />
            <input type="submit" value="great" />
        </form>
    </div>
    @{ 
        if(ViewBag.num1 > ViewBag.num2)
            {
                <div>@ViewBag.num1 is Greater</div>
        }
        else
            {
                <div>@ViewBag.num2 is Greater</div>
            }
    }


</body>
</html>
