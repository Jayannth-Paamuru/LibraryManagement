@model List<LMS.Models.product>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Product Details</h1>
    <div> 
       
            @foreach(var item in Model)
            {
                @item.pid<br />
                @item.pname<br />
                @item.description<br />
                <hr />
            }
       

    </div>
</body>
</html>
